{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "resolveJsonModule": true
    },
  },
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {}
  },
  "include": ["src/**/*.ts"]
}
